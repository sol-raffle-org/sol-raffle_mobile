{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "paths": {
      "@/*": [
        "./*"
      ],
      "@env": ["./node_modules/react-native-dotenv"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "/types/expo.d.ts",
    "expo-env.d.ts"
  ],
  "exclude": [
    "node_modules",
    "tmp"
  ]
}
